<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.common.baselibrary.view.TitleBar
        android:id="@+id/id_titleBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/lay_44"
        android:background="@color/main_blue"
        app:aTitle="webView"></com.common.baselibrary.view.TitleBar>


    <ProgressBar
        android:id="@+id/id_progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="3dip"
        android:progressDrawable="@drawable/bg_wb_progress" />

    <com.common.baselibrary.view.X5WebView
        android:id="@+id/id_webView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></com.common.baselibrary.view.X5WebView>


</LinearLayout>