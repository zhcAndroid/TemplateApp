<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|left">

        <ImageView
            android:id="@+id/iv_icon_left"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_gravity="center_vertical|left"
            android:contentDescription="@string/app_name" />

        <TextView
            android:id="@+id/tv_dot_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="top|right"
            android:layout_margin="@dimen/lay_8"
            android:paddingRight="@dimen/lay_4"
            android:paddingLeft="@dimen/lay_4"
            android:paddingTop="@dimen/lay_2"
            android:paddingBottom="@dimen/lay_2"
            android:background="@drawable/ic_red_dot"
            android:ellipsize="none"
            android:gravity="center"
            android:lines="1"
            android:minWidth="8dp"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="@dimen/size_6"
            android:visibility="gone"
            tools:ignore="EllipsizeMaxLines" />

    </FrameLayout>

    <com.ftx.app.view.MyFrontTextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/black"
        android:textSize="@dimen/font_18" />

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_gravity="center_vertical|right"
        android:contentDescription="@string/app_name"
         />
</merge>